<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TownOfStettler</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TownOfStettler.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Town Of Stettler Computer Inventory</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="OwnerLocation" asp-action="Index">Owner Location</a>
                        </li>

                        <li class="nav-item">
                            <div class="dropdown show">
                                <button class="btn btn-primary dropdown-toggle" type="button" href="#" role="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-expanded="false">
                                    <span>Menu</span>
                                </button>
                                <div class="dropdown-menu" aria-labelledby="dropdownmenu">
                                    <a class="dropdown-item">Device Information</a>
                                    <a class="dropdown-item">Display Monitor</a>
                                    <a class="dropdown-item">Ethernet Network</a>
                                    <a class="dropdown-item">Hard Drive</a>
                                    <a class="dropdown-item">Hardware Device</a>
                                    <a class="dropdown-item">History</a>
                                    <a class="dropdown-item">Modification</a>
                                    <a class="dropdown-item">Other Hardware</a>
                                    <a class="dropdown-item">Output</a>
                                    <a class="dropdown-item">Owner Location</a>
                                    <a class="dropdown-item">Part</a>
                                    <a class="dropdown-item">Printer</a>
                                    <a class="dropdown-item">Processor</a>
                                    <a class="dropdown-item">Ram</a>
                                    <a class="dropdown-item">Secondary Drives</a>
                                    <a class="dropdown-item">Software</a>
                                    <a class="dropdown-item">Sound Card</a>
                                    <a class="dropdown-item">Video Card</a>
                                    <a class="dropdown-item">Warranty</a>
                                </div>
                            </div>

                            @*<a class="nav-link text-dark" asp-area="" asp-controller="DeviceInformation" asp-action="Index">Device Information</a>*@
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - TownOfStettler - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
