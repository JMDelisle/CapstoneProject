@model IEnumerable<TownOfStettler.Models.Part>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Notes)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DeviceHistory)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HardDrive)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OriginalDevice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ram)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SecondaryDrive)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SoundCard)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VideoCard)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Notes)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DeviceHistory.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HardDrive.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OriginalDevice.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ram.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SecondaryDrive.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SoundCard.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VideoCard.Id)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
